generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
}

model Membership {
    userId Int @id
    roomId Int
    Admin Boolean
}

model Room {
    roomId Int @id
    Title String
}

model Message {
    userId Int @id
    roomId Int
    message Bytes
    date DateTime
}
